{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories list</h1>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    {% for category in categories %}
        <tr>
            <td>
                <a class="label label-default" style="background-color: {{ category.color }}; color: white" href="{{ path('list_task_category', {id: category.id}) }}">{{ category.name }} </a>
                <span style="margin-left: 10px">{{ category.tasks.count }} task(s)</span>
            </td>
            <td class="col-xs-2">
                <a href="{{ path('delete_category', {"id": category.id}) }}"><span class="glyphicon glyphicon-remove" title="Delete"></span></a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td>{% trans %}category.empty_list{% endtrans %}</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}